<Window x:Class="NextBala.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:NextBala.ViewModels"
        xmlns:views="clr-namespace:NextBala.Views"
        Title="NextBala - Sistema de Gestão de Pedidos"
        Height="700"
        Width="1200"
        Background="#EEF2F7"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/logo.ico"
        MinHeight="600"
        MinWidth="1000">

        <Window.DataContext>
                <vm:MainViewModel/>
        </Window.DataContext>

        <Window.Resources>
                <!-- Sombra -->
                <DropShadowEffect x:Key="Shadow"
                                  BlurRadius="20"
                                  ShadowDepth="2"
                                  Opacity="0.2"/>

                <!-- Estilo para Botões do Menu -->
                <Style x:Key="MenuButtonStyle"
                                TargetType="RadioButton">
                        <Setter Property="Foreground"
                                        Value="#BDC3C7"/>
                        <Setter Property="Background"
                                        Value="Transparent"/>
                        <Setter Property="FontSize"
                                        Value="14"/>
                        <Setter Property="FontWeight"
                                        Value="SemiBold"/>
                        <Setter Property="Padding"
                                        Value="20,10"/>
                        <Setter Property="Cursor"
                                        Value="Hand"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="RadioButton">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="8"
                                                        Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                                <Trigger Property="IsChecked"
                                                Value="True">
                                        <Setter Property="Background"
                                                        Value="#3498DB"/>
                                        <Setter Property="Foreground"
                                                        Value="White"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver"
                                                Value="True">
                                        <Setter Property="Foreground"
                                                        Value="White"/>
                                </Trigger>
                        </Style.Triggers>
                </Style>
        </Window.Resources>

        <Grid>
                <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <!-- Header -->
                        <RowDefinition Height="Auto"/>
                        <!-- Menu -->
                        <RowDefinition Height="*"/>
                        <!-- Content Area -->
                </Grid.RowDefinitions>

                <!-- HEADER -->
                <Border Grid.Row="0"
                        Height="70"
                        Background="#2C3E50"
                        CornerRadius="0"
                        Padding="20,0">
                        <Grid>
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Logo -->
                                <StackPanel Grid.Column="0"
                                                Orientation="Horizontal">
                                        <Border Width="40"
                                                Height="40"
                                                Background="White"
                                                CornerRadius="20"
                                                Margin="0,0,10,0">
                                                <TextBlock Text="NB"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="#2C3E50"
                                                           HorizontalAlignment="Center"
                                                           VerticalAlignment="Center"/>
                                        </Border>
                                        <StackPanel VerticalAlignment="Center">
                                                <TextBlock Text="NextBala"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           Foreground="White"/>
                                                <TextBlock Text="Sistema de Gestão"
                                                           FontSize="10"
                                                           Foreground="#BDC3C7"/>
                                        </StackPanel>
                                </StackPanel>

                                <!-- Data e Hora -->
                                <TextBlock Grid.Column="2"
                                           Text="{Binding DataAtual}"
                                           Foreground="#BDC3C7"
                                           VerticalAlignment="Center"
                                           FontSize="11"/>
                        </Grid>
                </Border>

                <!-- MENU DE NAVEGAÇÃO -->
                <Border Grid.Row="1"
                        Background="White"
                        Padding="10"
                        CornerRadius="0"
                        Effect="{StaticResource Shadow}">
                        <StackPanel Orientation="Horizontal">
                                <RadioButton Content="🏠 Dashboard"
                                             Style="{StaticResource MenuButtonStyle}"
                                             IsChecked="True"
                                             Command="{Binding NavigateToDashboardCommand}"/>
                                <RadioButton Content="📋 Pedidos"
                                             Style="{StaticResource MenuButtonStyle}"
                                             Command="{Binding NavigateToPedidosCommand}"/>
                        </StackPanel>
                </Border>

                <!-- ÁREA DE CONTEÚDO -->
                <ContentControl Grid.Row="2"
                                Content="{Binding CurrentView}"
                                Margin="10">
                        <ContentControl.Resources>
                                <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
                                        <views:DashboardView/>
                                </DataTemplate>
                                <DataTemplate DataType="{x:Type vm:PedidoViewModel}">
                                        <views:PedidoView/>
                                </DataTemplate>
                        </ContentControl.Resources>
                </ContentControl>
        </Grid>
</Window>