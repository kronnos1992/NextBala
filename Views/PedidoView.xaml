<UserControl x:Class="NextBala.Views.PedidoView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:NextBala.ViewModels"
             xmlns:converters="clr-namespace:NextBala.Converters"
             mc:Ignorable="d"
             d:DesignHeight="600"
             d:DesignWidth="1000"
             Background="#EEF2F7">

        <UserControl.DataContext>
                <vm:PedidoViewModel/>
        </UserControl.DataContext>

        <UserControl.Resources>
                <!-- Conversores -->
                <converters:StatusToVisibilityConverter x:Key="StatusToVisibilityConverter"/>
                <converters:DateMaskConverter x:Key="DateMaskConverter"/>

                <!-- Sombra -->
                <DropShadowEffect x:Key="Shadow"
                                  BlurRadius="20"
                                  ShadowDepth="2"
                                  Opacity="0.2"/>

                <!-- Botão padrão -->
                <Style TargetType="Button">
                        <Setter Property="Foreground"
                                        Value="White"/>
                        <Setter Property="Padding"
                                        Value="18,10"/>
                        <Setter Property="FontWeight"
                                        Value="Bold"/>
                        <Setter Property="Cursor"
                                        Value="Hand"/>
                        <Setter Property="BorderThickness"
                                        Value="0"/>
                        <Setter Property="MinWidth"
                                        Value="120"/>
                        <Setter Property="Height"
                                        Value="36"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                                <Border Background="{TemplateBinding Background}"
                                                        CornerRadius="10"
                                                        BorderThickness="0"
                                                        Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center"
                                                                          VerticalAlignment="Center"/>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- TextBox moderno -->
                <Style x:Key="TextBoxStyle"
                                TargetType="TextBox">
                        <Setter Property="Background"
                                        Value="#F4F7FB"/>
                        <Setter Property="BorderBrush"
                                        Value="#D6DFEA"/>
                        <Setter Property="BorderThickness"
                                        Value="1"/>
                        <Setter Property="Padding"
                                        Value="8,6"/>
                        <Setter Property="FontSize"
                                        Value="13"/>
                        <Setter Property="Height"
                                        Value="34"/>
                        <Setter Property="Foreground"
                                        Value="#2C3E50"/>
                        <Setter Property="VerticalContentAlignment"
                                        Value="Center"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="TextBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10">
                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                      VerticalAlignment="Center"
                                                                      Margin="6,0"/>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- TextBox com máscara para data -->
                <Style x:Key="DataTextBoxStyle"
                       TargetType="TextBox"
                       BasedOn="{StaticResource TextBoxStyle}">
                        <Setter Property="Height"
                                        Value="28"/>
                        <Setter Property="FontSize"
                                        Value="12"/>
                        <Setter Property="MaxLength"
                                        Value="10"/>
                        <Setter Property="ToolTip"
                                        Value="Digite a data no formato dd/MM/yyyy"/>
                </Style>

                <!-- ComboBox moderno -->
                <Style x:Key="ComboBoxStyle"
                                TargetType="ComboBox">
                        <Setter Property="Background"
                                        Value="#F4F7FB"/>
                        <Setter Property="BorderBrush"
                                        Value="#D6DFEA"/>
                        <Setter Property="BorderThickness"
                                        Value="1"/>
                        <Setter Property="Padding"
                                        Value="8,6"/>
                        <Setter Property="FontSize"
                                        Value="13"/>
                        <Setter Property="Height"
                                        Value="32"/>
                        <Setter Property="Foreground"
                                        Value="#2C3E50"/>
                        <Setter Property="Template">
                                <Setter.Value>
                                        <ControlTemplate TargetType="ComboBox">
                                                <Border Background="{TemplateBinding Background}"
                                                        BorderBrush="{TemplateBinding BorderBrush}"
                                                        BorderThickness="{TemplateBinding BorderThickness}"
                                                        CornerRadius="10">
                                                        <Grid>
                                                                <ToggleButton x:Name="ToggleButton"
                                                                              Grid.Column="2"
                                                                              IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                              Background="Transparent"
                                                                              BorderThickness="0"
                                                                              HorizontalAlignment="Right"
                                                                              Width="30">
                                                                        <Path Data="M 0 0 L 4 4 L 8 0"
                                                                              Fill="#3498DB"
                                                                              Margin="0,2,0,0"
                                                                              HorizontalAlignment="Center"
                                                                              VerticalAlignment="Center"/>
                                                                </ToggleButton>
                                                                <ContentPresenter x:Name="ContentSite"
                                                                                  Margin="{TemplateBinding Padding}"
                                                                                  VerticalAlignment="Center"
                                                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                                                  ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                                  ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"/>
                                                                <Popup x:Name="Popup"
                                                                       Placement="Bottom"
                                                                       IsOpen="{TemplateBinding IsDropDownOpen}"
                                                                       AllowsTransparency="True"
                                                                       Focusable="False"
                                                                       PopupAnimation="Slide">
                                                                        <Border BorderThickness="1"
                                                                                BorderBrush="#D6DFEA"
                                                                                Background="White"
                                                                                CornerRadius="6"
                                                                                MaxHeight="180"
                                                                                Margin="0,2,0,0">
                                                                                <ScrollViewer>
                                                                                        <ItemsPresenter/>
                                                                                </ScrollViewer>
                                                                        </Border>
                                                                </Popup>
                                                        </Grid>
                                                </Border>
                                        </ControlTemplate>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- Label simples -->
                <Style x:Key="FieldLabel"
                                TargetType="TextBlock">
                        <Setter Property="FontSize"
                                        Value="11"/>
                        <Setter Property="Foreground"
                                        Value="#6B7A90"/>
                        <Setter Property="Margin"
                                        Value="2,3,0,2"/>
                </Style>

                <!-- Estilo para DataGrid -->
                <Style x:Key="RoundedDataGrid"
                                TargetType="DataGrid">
                        <Setter Property="BorderThickness"
                                        Value="1"/>
                        <Setter Property="BorderBrush"
                                        Value="#D6DFEA"/>
                        <Setter Property="Background"
                                        Value="White"/>
                        <Setter Property="RowBackground"
                                        Value="White"/>
                        <Setter Property="AlternatingRowBackground"
                                        Value="#F5F7FA"/>
                        <Setter Property="HeadersVisibility"
                                        Value="Column"/>
                        <Setter Property="GridLinesVisibility"
                                        Value="None"/>
                        <Setter Property="FontSize"
                                        Value="12"/>
                        <Setter Property="RowHeight"
                                        Value="28"/>
                        <Setter Property="CellStyle">
                                <Setter.Value>
                                        <Style TargetType="DataGridCell">
                                                <Setter Property="BorderThickness"
                                                                Value="0"/>
                                                <Setter Property="Padding"
                                                                Value="5"/>
                                                <Setter Property="FocusVisualStyle"
                                                                Value="{x:Null}"/>
                                                <Setter Property="VerticalAlignment"
                                                                Value="Center"/>
                                        </Style>
                                </Setter.Value>
                        </Setter>
                        <Setter Property="ColumnHeaderStyle">
                                <Setter.Value>
                                        <Style TargetType="DataGridColumnHeader">
                                                <Setter Property="Background"
                                                                Value="#F0F3F7"/>
                                                <Setter Property="Foreground"
                                                                Value="#2C3E50"/>
                                                <Setter Property="FontWeight"
                                                                Value="SemiBold"/>
                                                <Setter Property="FontSize"
                                                                Value="12"/>
                                                <Setter Property="BorderBrush"
                                                                Value="#D6DFEA"/>
                                                <Setter Property="BorderThickness"
                                                                Value="0,0,1,1"/>
                                                <Setter Property="Padding"
                                                                Value="6"/>
                                                <Setter Property="Height"
                                                                Value="30"/>
                                        </Style>
                                </Setter.Value>
                        </Setter>
                </Style>

                <!-- Estilo para RadioButton -->
                <Style x:Key="RadioButtonStyle"
                                TargetType="RadioButton">
                        <Setter Property="Margin"
                                        Value="5,0"/>
                        <Setter Property="Foreground"
                                        Value="#2C3E50"/>
                        <Setter Property="FontSize"
                                        Value="11"/>
                        <Setter Property="VerticalAlignment"
                                        Value="Center"/>
                </Style>
        </UserControl.Resources>

        <!-- Conteúdo principal -->
        <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">

                <Grid Margin="8,0,8,8">
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="320"/>
                                <!-- FORMULÁRIO -->
                                <ColumnDefinition Width="*"/>
                                <!-- ITENS -->
                                <ColumnDefinition Width="*"/>
                                <!-- PEDIDOS -->
                        </Grid.ColumnDefinitions>

                        <!-- FORMULÁRIO -->
                        <Border Grid.Column="0"
                                Background="White"
                                CornerRadius="10"
                                Padding="15"
                                Margin="2"
                                Effect="{StaticResource Shadow}">

                                <StackPanel>
                                        <TextBlock Text="Novo Pedido"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,8"/>

                                        <TextBlock Text="Cliente"
                                                   Style="{StaticResource FieldLabel}"/>
                                        <TextBox Text="{Binding ClienteNome}"
                                                 Style="{StaticResource TextBoxStyle}"/>

                                        <TextBlock Text="Telefone"
                                                   Style="{StaticResource FieldLabel}"/>
                                        <TextBox Text="{Binding ClienteTelefone}"
                                                 Style="{StaticResource TextBoxStyle}"/>

                                        <TextBlock Text="Marca"
                                                   Style="{StaticResource FieldLabel}"/>
                                        <TextBox Text="{Binding Marca}"
                                                 Style="{StaticResource TextBoxStyle}"/>

                                        <TextBlock Text="Modelo"
                                                   Style="{StaticResource FieldLabel}"/>
                                        <TextBox Text="{Binding Modelo}"
                                                 Style="{StaticResource TextBoxStyle}"/>

                                        <TextBlock Text="Defeito"
                                                   Style="{StaticResource FieldLabel}"/>
                                        <TextBox Text="{Binding Defeito}"
                                                 Style="{StaticResource TextBoxStyle}"/>

                                        <TextBlock Text="Técnico"
                                                   Style="{StaticResource FieldLabel}"/>
                                        <TextBox Text="{Binding Tecnico}"
                                                 Style="{StaticResource TextBoxStyle}"/>

                                        <TextBlock Text="Preço (AOA)"
                                                   Style="{StaticResource FieldLabel}"/>
                                        <TextBox Text="{Binding Preco}"
                                                 Style="{StaticResource TextBoxStyle}"
                                                 Margin="0,0,0,12"/>

                                        <StackPanel Orientation="Horizontal"
                                                    HorizontalAlignment="Center"
                                                    Margin="0,5,0,5">

                                                <Button Content="Adicionar Item"
                                                        Command="{Binding AdicionarItemCommand}"
                                                        Background="#2980B9"
                                                        Margin="0,0,5,0"
                                                        Height="34"
                                                        Width="120"/>

                                                <Button Content="Salvar Pedido"
                                                        Command="{Binding SalvarPedidoCommand}"
                                                        Background="#27AE60"
                                                        Height="34"
                                                        Width="120"/>
                                        </StackPanel>

                                        <Button Content="Novo Pedido"
                                                Command="{Binding NovoPedidoCommand}"
                                                Background="#7F8C8D"
                                                Height="34"
                                                Width="260"
                                                Margin="0,5,0,0"/>
                                </StackPanel>
                        </Border>

                        <!-- ITENS -->
                        <Border Grid.Column="1"
                                Background="White"
                                CornerRadius="10"
                                Padding="12"
                                Margin="2"
                                Effect="{StaticResource Shadow}">

                                <StackPanel>
                                        <TextBlock Text="Itens do Pedido"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,6"/>

                                        <Border BorderBrush="#D6DFEA"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Background="White"
                                                Margin="0,0,0,6"
                                                Padding="1"
                                                Height="280">
                                                <DataGrid ItemsSource="{Binding Itens}"
                                                          AutoGenerateColumns="False"
                                                          CanUserAddRows="False"
                                                          Style="{StaticResource RoundedDataGrid}"
                                                          BorderThickness="0"
                                                          Background="White"
                                                          ScrollViewer.VerticalScrollBarVisibility="Auto">
                                                        <DataGrid.Columns>
                                                                <DataGridTextColumn Header="Marca"
                                                                                    Binding="{Binding Marca}"
                                                                                    Width="*"/>
                                                                <DataGridTextColumn Header="Modelo"
                                                                                    Binding="{Binding Modelo}"
                                                                                    Width="*"/>
                                                                <DataGridTextColumn Header="Defeito"
                                                                                    Binding="{Binding Defeito}"
                                                                                    Width="*"/>
                                                                <DataGridTextColumn Header="Técnico"
                                                                                    Binding="{Binding Tecnico}"
                                                                                    Width="*"/>
                                                                <DataGridTextColumn Header="Preço"
                                                                                    Binding="{Binding Preco, StringFormat={}{0:N2} AOA}"
                                                                                    Width="*"/>
                                                        </DataGrid.Columns>
                                                </DataGrid>
                                        </Border>

                                        <TextBlock Text="Ticket"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,2"/>

                                        <TextBox Text="{Binding Ticket}"
                                                 AcceptsReturn="True"
                                                 IsReadOnly="True"
                                                 Height="90"
                                                 Background="#F5F7FA"
                                                 BorderThickness="0"
                                                 Padding="6"
                                                 TextWrapping="Wrap"
                                                 FontFamily="Consolas"
                                                 FontSize="9">
                                                <TextBox.Template>
                                                        <ControlTemplate TargetType="TextBox">
                                                                <Border Background="{TemplateBinding Background}"
                                                                        BorderThickness="0"
                                                                        CornerRadius="8">
                                                                        <ScrollViewer x:Name="PART_ContentHost"
                                                                                      Margin="4"/>
                                                                </Border>
                                                        </ControlTemplate>
                                                </TextBox.Template>
                                        </TextBox>
                                </StackPanel>
                        </Border>

                        <!-- PEDIDOS -->
                        <Border Grid.Column="2"
                                Background="White"
                                CornerRadius="10"
                                Padding="12"
                                Margin="2"
                                Effect="{StaticResource Shadow}">

                                <StackPanel>
                                        <TextBlock Text="Pedidos Registrados"
                                                   FontSize="18"
                                                   FontWeight="Bold"
                                                   Margin="0,0,0,6"/>

                                        <!-- FILTROS -->
                                        <Border Background="#F5F7FA"
                                                CornerRadius="8"
                                                Padding="8"
                                                Margin="0,0,0,8">
                                                <StackPanel>
                                                        <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <!-- Filtro por Técnico -->
                                                                <StackPanel Grid.Column="0"
                                                                            Margin="0,0,5,5">
                                                                        <TextBlock Text="Técnico:"
                                                                                   FontSize="10"
                                                                                   Foreground="#6B7A90"
                                                                                   Margin="0,0,0,1"/>
                                                                        <ComboBox ItemsSource="{Binding TecnicosLista}"
                                                                                  SelectedItem="{Binding TecnicoFiltro}"
                                                                                  Style="{StaticResource ComboBoxStyle}"
                                                                                  Height="28"
                                                                                  FontSize="12"/>
                                                                </StackPanel>

                                                                <!-- Botão Limpar Filtros -->
                                                                <Button Grid.Column="1"
                                                                        Content="✕"
                                                                        Command="{Binding LimparFiltrosCommand}"
                                                                        Background="#E74C3C"
                                                                        Width="28"
                                                                        Height="28"
                                                                        MinWidth="28"
                                                                        Padding="0"
                                                                        FontSize="14"
                                                                        Margin="0,14,0,0"
                                                                        ToolTip="Limpar filtros"/>
                                                        </Grid>

                                                        <!-- Filtro por Data com máscara -->
                                                        <Grid Margin="0,5,0,0">
                                                                <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="*"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                        <ColumnDefinition Width="Auto"/>
                                                                </Grid.ColumnDefinitions>

                                                                <StackPanel Grid.Column="0"
                                                                            Margin="0,0,5,0">
                                                                        <TextBlock Text="Data (dd/MM/yyyy):"
                                                                                   FontSize="10"
                                                                                   Foreground="#6B7A90"
                                                                                   Margin="0,0,0,1"/>
                                                                        <TextBox Text="{Binding DataTextoFiltro, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource DateMaskConverter}}"
                                                                                 Style="{StaticResource DataTextBoxStyle}"
                                                                                 Height="28"
                                                                                 FontSize="12"
                                                                                 MaxLength="10">
                                                                                <TextBox.InputBindings>
                                                                                        <KeyBinding Key="Enter"
                                                                                                    Command="{Binding AplicarFiltroDataCommand}"/>
                                                                                </TextBox.InputBindings>
                                                                        </TextBox>
                                                                </StackPanel>

                                                                <RadioButton Grid.Column="1"
                                                                             Content="Hoje"
                                                                             IsChecked="{Binding FiltroHoje}"
                                                                             Style="{StaticResource RadioButtonStyle}"
                                                                             Margin="0,0,5,0"/>

                                                                <RadioButton Grid.Column="2"
                                                                             Content="Este Mês"
                                                                             IsChecked="{Binding FiltroMes}"
                                                                             Style="{StaticResource RadioButtonStyle}"/>
                                                        </Grid>
                                                </StackPanel>
                                        </Border>

                                        <!-- DataGrid de Pedidos (SEM botão cancelar) -->
                                        <Border BorderBrush="#D6DFEA"
                                                BorderThickness="1"
                                                CornerRadius="8"
                                                Background="White"
                                                Padding="1"
                                                Height="300">
                                                <DataGrid ItemsSource="{Binding PedidosFiltrados}"
                                                          AutoGenerateColumns="False"
                                                          CanUserAddRows="False"
                                                          Style="{StaticResource RoundedDataGrid}"
                                                          BorderThickness="0"
                                                          Background="White"
                                                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                                                          IsReadOnly="True">
                                                        <DataGrid.Columns>
                                                                <DataGridTextColumn Header="Nº"
                                                                                    Binding="{Binding NumeroPedido}"
                                                                                    Width="45"/>
                                                                <DataGridTextColumn Header="Cliente"
                                                                                    Binding="{Binding Cliente.Nome}"
                                                                                    Width="100"/>
                                                                <DataGridTextColumn Header="Marca"
                                                                                    Binding="{Binding Itens[0].Marca}"
                                                                                    Width="70"/>
                                                                <DataGridTextColumn Header="Modelo"
                                                                                    Binding="{Binding Itens[0].Modelo}"
                                                                                    Width="70"/>
                                                                <DataGridTextColumn Header="Técnicos"
                                                                                    Binding="{Binding TecnicosConcatenados}"
                                                                                    Width="90"/>
                                                                <DataGridTextColumn Header="Data"
                                                                                    Binding="{Binding Data, StringFormat=dd/MM/yyyy}"
                                                                                    Width="75"/>
                                                                <DataGridTextColumn Header="Total"
                                                                                    Binding="{Binding Total, StringFormat={}{0:N2} AOA}"
                                                                                    Width="85"/>
                                                                <DataGridTextColumn Header="Status"
                                                                                    Binding="{Binding Status}"
                                                                                    Width="70">
                                                                        <DataGridTextColumn.ElementStyle>
                                                                                <Style TargetType="TextBlock">
                                                                                        <Setter Property="FontWeight"
                                                                                                        Value="SemiBold"/>
                                                                                        <Setter Property="VerticalAlignment"
                                                                                                        Value="Center"/>
                                                                                        <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding Status}"
                                                                                                                Value="Cancelado">
                                                                                                        <Setter Property="Foreground"
                                                                                                                        Value="#E74C3C"/>
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding Status}"
                                                                                                                Value="Ativo">
                                                                                                        <Setter Property="Foreground"
                                                                                                                        Value="#27AE60"/>
                                                                                                </DataTrigger>
                                                                                        </Style.Triggers>
                                                                                </Style>
                                                                        </DataGridTextColumn.ElementStyle>
                                                                </DataGridTextColumn>
                                                        </DataGrid.Columns>
                                                </DataGrid>
                                        </Border>

                                        <!-- Apenas contador de resultados, SEM botão cancelar -->
                                        <TextBlock Text="{Binding ResultadosFiltro}"
                                                   FontSize="10"
                                                   Foreground="#6B7A90"
                                                   HorizontalAlignment="Right"
                                                   Margin="0,3,0,0"/>
                                </StackPanel>
                        </Border>
                </Grid>
        </ScrollViewer>
</UserControl>